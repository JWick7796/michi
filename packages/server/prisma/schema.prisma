// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(cuid())
  title     String   @unique
  createdAt DateTime @default(now())
}

model Feature {
  id         String   @id @default(cuid())
  feature    String
  upvotes    Int
  votedUsers String[]
  tags       Tags[]
  createdAt  DateTime @default(now())
}

model UserRequest {
  id        String   @id @default(cuid())
  request   String
  requestBy String
  createdAt DateTime @default(now())
}

enum Tags {
  IN_PROGRESS
  BUILT
  CANCELLED
  BACKLOG
  NEWLY_ADDED
}
